---
interface Props {
	date: Date;
	className?: string;
}

const { date, className } = Astro.props;
const formatted = date.toLocaleDateString("en-CA");
const iso = date.toISOString();
/*
<!-- old impl -->
<time
	datetime={date.toISOString()}
	data-long={formatted}
	data-short={formatted.slice(-5)}
	class:list={[className, "before:content-[attr(data-short)]", "sm:before:content-[attr(data-long)]"]}
/>
*/
---

<time datetime={iso} class:list={["hidden sm:block", className]}>{formatted}</time>
<time datetime={iso} class:list={["sm:hidden", className]}>{formatted.slice(-5)}</time>