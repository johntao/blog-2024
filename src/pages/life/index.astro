---
import PostList from "@/components/PostList.astro";
import { sortByPubDate } from "@/utils/data.util";
import { getCollection } from "astro:content";
import StarlightPage from "@astrojs/starlight/components/StarlightPage.astro";

const Folder = "docs";

const posts = (await getCollection(Folder))
  .filter((q) => q.data.pubDate && q.id.includes("life"))
  // @ts-ignore TS2345
  .sort(sortByPubDate);
---

<StarlightPage
  frontmatter={{
    title: "Category: Life in General",
    description: "Life in general, no specific topic.",
    tableOfContents: false,
  }}
>
  <PostList folder={Folder} posts={posts} />
</StarlightPage>
